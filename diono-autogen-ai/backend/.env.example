# Application
APP_NAME=DionoAutogen AI
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8000

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:4000"]

# LLM Configuration
LLM_MODEL=mistral-7b-instruct
# LLM_API_URL should be the base URL without /v1 path
# The system will append /v1/chat/completions automatically
# WARNING: Do not include /v1 in the URL - it will be added automatically
# Correct: http://localhost:11434
# Wrong: http://localhost:11434/v1
LLM_API_URL=http://localhost:11434
LLM_API_KEY=
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Workspace
WORKSPACE_DIR=/workspace
MAX_WORKSPACE_SIZE_MB=1000

# Execution
MAX_EXECUTION_TIME=300
SANDBOX_MEMORY_LIMIT=2g
SANDBOX_CPU_LIMIT=2.0

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./diono_autogen.db

# Redis
REDIS_URL=redis://localhost:6379

# Cloud Storage (optional)
GOOGLE_DRIVE_CREDENTIALS=
DROPBOX_ACCESS_TOKEN=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/diono_autogen.log
